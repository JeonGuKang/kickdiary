<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/dlg_layout"
    android:layout_gravity="center"
    android:layout_width="273.0dp"
    android:background="@drawable/common_dialog_bg"
    android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
        android:id="@+id/title_layout"
        android:layout_height="38.0dp"
        android:background="@color/colorWhite">

        <TextView
            android:textSize="14dp"
            android:textColor="@color/color_black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/title"
            android:gravity="center"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.34dp"
        android:background="@color/color_concrete"/>
    <LinearLayout android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="23dp"
        android:orientation="vertical">

        <TextView
            android:textSize="12.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text=""
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:lineSpacingExtra="8dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.34dp"
        android:background="@color/color_concrete"/>

    <RelativeLayout android:background="@color/colorWhite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout android:id="@+id/llo_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/ButtonStyleNoShadow"
                    android:textSize="14.0dp"
                    android:textColor="@color/color_black"
                    android:layout_width="match_parent"
                    android:layout_height="38.0dip"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/common_dialog_cancel_button_bg"
                    android:text="@string/str_no"/>

            </LinearLayout>

            <View
                android:id="@+id/common_alert_view"
                android:layout_width="0.33dp"
                android:layout_height="match_parent"
                android:background="@color/color_concrete"/>

            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/btn_ok"
                    style="@style/ButtonStyleNoShadow"
                    android:textSize="14.0dp"
                    android:textColor="@color/color_black"
                    android:layout_width="match_parent"
                    android:layout_height="38.0dip"
                    android:textStyle="bold"
                    android:background="@drawable/common_dialog_ok_button_bg"
                    android:text="@string/str_yes"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>

